<?xml version="1.0" encoding="utf-8"?>
<!-- @author Alex Keda, for www.host-food.ru -->
<XML>
	<!-- *********************************************************************** -->
	<Appearance>
		<Row>
			<Comp>Colors/ProxyOrders</Comp>
			<Args>
				<ListElement>%StatusID%</ListElement>
			</Args>
		</Row>
	</Appearance>
	<!-- *********************************************************************** -->
	<!-- *********************************************************************** -->
	<Source>
		<TableID>ProxyOrdersOwners</TableID>
		<ColumnsIDs>
			<ListElement>ID</ListElement>
			<ListElement>OrderID</ListElement>
			<ListElement>UserID</ListElement>
			<ListElement>IP</ListElement>
			<ListElement>Host</ListElement>
			<ListElement>Port</ListElement>
			<ListElement>ProtocolType</ListElement>
			<ListElement>DaysRemainded</ListElement>
			<ListElement>StatusID</ListElement>
			<ListElement>StatusDate</ListElement>
			<ListElement>ServiceID</ListElement>
			<ListElement>UserNotice</ListElement>
			<ListElement>AdminNotice</ListElement>
		</ColumnsIDs>
		<!-- *********************************************************************** -->
		<Conditions>
			<Message>Заказов на Прокси-сервера не обнаружено.</Message>
		</Conditions>
	</Source>
	<!-- *********************************************************************** -->
	<!-- *********************************************************************** -->
	<Comps>
		<Before>
			<DateSelect>
				<Comp>Tables/Forms/DateSelect</Comp>
				<Args>
					<ListElement>OrderDate</ListElement>
				</Args>
				<NoBlock/>
			</DateSelect>
			<!-- ********************************************************************* -->
			<PatternOut>
				<Args>
					<Patterns>
						<Yesterday>
							<Name>Заказы за вчера</Name>
							<Where>`OrderDate` &gt; BEGIN_DAY() - 86400</Where>
						</Yesterday>
						<!-- ****************************************************************** -->
						<Today>
							<Name>Заказы за сегодня</Name>
							<Where>`OrderDate` &gt; BEGIN_DAY()</Where>
						</Today>
						<!-- ****************************************************************** -->
						<Week>
							<Name>Заказы за текущую неделю</Name>
							<Where>`OrderDate` &gt; BEGIN_WEEK()</Where>
						</Week>
						<!-- ****************************************************************** -->
						<Month>
							<Name>Заказы за текущий месяц</Name>
							<Where>`OrderDate` &gt; BEGIN_MONTH()</Where>
						</Month>
						<!-- ****************************************************************** -->
						<Exists>
							<Name>Существующие заказы</Name>
							<Where>`StatusID` != 'Waiting' AND `StatusID` != 'Deleted'</Where>
						</Exists>
						<!-- ****************************************************************** -->
						<Waiting>
							<Name>Заказы для оплаты</Name>
							<Where>`StatusID` = 'Waiting'</Where>
						</Waiting>
						<!-- ****************************************************************** -->
						<OnCreate>
							<Name>Заказы на создании</Name>
							<Where>`StatusID` = 'OnCreate'</Where>
						</OnCreate>
						<!-- ****************************************************************** -->
						<Active>
							<Name>Активные заказы</Name>
							<Where>`StatusID` = 'Active'</Where>
						</Active>
						<!-- ****************************************************************** -->
						<Deleted>
							<Name>Удаленные заказы</Name>
							<Where>`StatusID` = 'Deleted'</Where>
						</Deleted>
					</Patterns>
					<ActiveID>Week</ActiveID>
				</Args>
			</PatternOut>
			<!-- ********************************************************************* -->
			<Search>
				<Args>
					<ColumnsIDs>
						<ListElement>OrderID</ListElement>
						<ListElement>UserID</ListElement>
						<ListElement>IP</ListElement>
						<ListElement>Host</ListElement>
						<ListElement>Port</ListElement>
						<ListElement>Login</ListElement>
						<ListElement>AdminNotice</ListElement>
					</ColumnsIDs>
				</Args>
			</Search>
			<!-- ********************************************************************* -->
			<ProxySearch>
				<Comp>ProxyOrders/Search</Comp>
				<Args type="array"/>
				<NoBlock/>
			</ProxySearch>
		</Before>
		<!-- ********************************************************************** -->
		<After>
			<Delete>
				<Args>
					<Comment>Выбранные заказы</Comment>
					<Send>
						<TableID>ProxyOrders</TableID>
					</Send>
				</Args>
			</Delete>
			<!-- ********************************************************************* -->
			<StatusSet>
				<Comp>Statuses/Set</Comp>
				<Args>
					<ListElement>ProxyOrders</ListElement>
				</Args>
			</StatusSet>
		</After>
	</Comps>
	<!-- *********************************************************************** -->
	<!-- *********************************************************************** -->
	<Query>
		<SortOn>Number</SortOn>
	</Query>
	<!-- *********************************************************************** -->
	<!-- *********************************************************************** -->
	<Columns>
		<SelectID>
			<Args>
				<TableID>ProxyOrders</TableID>
			</Args>
		</SelectID>
		<!-- ********************************************************************** -->
		<!-- ********************************************************************** -->
		<ExtendedMenu>
			<IsSorted>0</IsSorted>
			<Comp>Menus/List</Comp>
			<Args>
				<ListElement>Administrator/ListMenu/ProxyOrder.xml</ListElement>
				<Replace>
					<ServiceOrderID>%ID%</ServiceOrderID>
					<ServiceID>%ServiceID%</ServiceID>
				</Replace>
			</Args>
		</ExtendedMenu>
		<!-- ********************************************************************** -->
		<Number>
			<Head>Номер</Head>
			<Comp>Formats/Order/Notice</Comp>
			<Args>
				<ListElement>Orders</ListElement>
				<ListElement>%OrderID%</ListElement>
				<ListElement>Formats/Order/Number</ListElement>
				<ListElement>%OrderID%</ListElement>
				<ListElement>10</ListElement>
				<ListElement>%AdminNotice%</ListElement>
				<ListElement>%UserNotice%</ListElement>
			</Args>
			<Alias>ID</Alias>
			<Attribs>
				<style>text-align:right;</style>
			</Attribs>
		</Number>
		<!-- ********************************************************************** -->
		<!-- ********************************************************************** -->
		<Expiration>
			<Head>Дата оконч.</Head>
			<Prompt>Дата окончания заказа | остаток дней</Prompt>
			<Comp>Formats/ExpirationDate</Comp>
			<Args>
				<ListElement>%DaysRemainded%</ListElement>
			</Args>
			<Alias>DaysRemainded</Alias>
		</Expiration>
		<!-- *********************************************************************** -->
		<HostPort>
			<Head>Прокси</Head>
			<Prompt>Адрес и порт куда необходимо подключаться</Prompt>
			<Alias>CONCAT(`Host`,':',`Port`)</Alias>
		</HostPort>
		<!-- *********************************************************************** -->
		<ProtocolType>
			<Head>Пр.</Head>
			<Prompt>Протокол взаимодействия с прокси-сервером</Prompt>
		</ProtocolType>
		<!-- *********************************************************************** -->
		<Country>
			<Head>Стр.</Head>
			<Prompt>Страна размещения прокси-сервера</Prompt>
			<Comp>Formats/CountryImage</Comp>
			<Args>
				<ListElement>%Country%</ListElement>
			</Args>
			<Alias>(SELECT `Country` FROM `ProxySchemes` WHERE `ProxySchemes`.`ID` = `ProxyOrdersOwners`.`SchemeID`)</Alias>
		</Country>
		<!-- *********************************************************************** -->
		<!-- *********************************************************************** -->
		<Status>
			<Args>
				<ModeID>ProxyOrders</ModeID>
			</Args>
		</Status>
	</Columns>
	<!-- *********************************************************************** -->
	<!-- *********************************************************************** -->
	<Sequence>
		<ListElement>SelectID</ListElement>
		<ListElement>ExtendedMenu</ListElement>
		<ListElement>Number</ListElement>
		<ListElement>Owner</ListElement>
		<ListElement>Country</ListElement>
		<ListElement>HostPort</ListElement>
		<ListElement>ProtocolType</ListElement>
		<ListElement>Expiration</ListElement>
		<ListElement>Status</ListElement>
		<ListElement>StatusOver</ListElement>
	</Sequence>
	<!-- *********************************************************************** -->
</XML>
