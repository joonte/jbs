<?xml version="1.0" encoding="utf-8"?>
<!-- @author Бреславский А.В. (Joonte Ltd.) -->
<XML>
	<!-- *********************************************************************** -->
	<ProfileName>%Name%</ProfileName>
	<!-- *********************************************************************** -->
	<Attribs>
		<Name>
			<Check>/^[а-яА-ЯёЁa-zA-Z\-\"\s\.]{1,50}$/u</Check>
			<Message>Русские и английские буквы, дефис, точка, пробел, двойные кавычки. От 1 до 50 символов</Message>
			<Comment>Имя как партнёра</Comment>
			<Example>Креативная группа "ТриТон"</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
			</Attribs>
			<IsDuty>1</IsDuty>
			<Value/>
		</Name>
		<!-- ********************************************************************** -->
		<Type>
			<Comment>Вид деятельности</Comment>
			<Type>Select</Type>
			<Options>
				<DisignStudio>Дизайнерская студия</DisignStudio>
				<None>Не указан</None>
			</Options>
			<Attribs>
				<style>width: 100%;</style>
			</Attribs>
			<IsDuty>1</IsDuty>
			<Value>DisignStudio</Value>
		</Type>
		<!-- ********************************************************************** -->
		<SiteURL>
			<Check>Url</Check>
			<Comment>Адрес Вашего сайта</Comment>
			<Example>https://www.nopreset.net</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
				<Formatters>AddUrlScheme</Formatters>
			</Attribs>
			<IsDuty>1</IsDuty>
			<Value/>
		</SiteURL>
		<!-- ********************************************************************** -->
		<LogoURL>
			<Check>Url</Check>
			<Comment>Адрес Вашей иконки (200x150)</Comment>
			<Example>https://www.joonte.com/Logo.png</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
				<Formatters>AddUrlScheme</Formatters>
			</Attribs>
			<IsDuty>1</IsDuty>
			<Value/>
		</LogoURL>
		<!-- ********************************************************************** -->
		<City>
			<Check>City</Check>
			<Comment>Город / населённый пункт</Comment>
			<Example>г. Иваново</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
			</Attribs>
			<IsDuty>1</IsDuty>
			<Value>г. </Value>
		</City>
		<!-- ********************************************************************** -->
		<Phone>
			<Check>Phone</Check>
			<Comment>Телефон</Comment>
			<Example>+7 495 7558899</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
			</Attribs>
			<IsDuty>0</IsDuty>
			<Value/>
		</Phone>
		<!-- ********************************************************************** -->
		<Comment>
			<Check>Text</Check>
			<Comment>Краткое описание деятельности компании (до 1000 символов)</Comment>
			<Example>Сфера деятельности, отличительные особенности ...</Example>
			<Type>TextArea</Type>
			<Attribs>
				<rows>5</rows>
			</Attribs>
			<IsDuty>1</IsDuty>
			<Value/>
		</Comment>
	</Attribs>
	<!-- *********************************************************************** -->
</XML>
