<?xml version="1.0" encoding="utf-8"?>
<!-- @author Alex Keda, for www.host-food.ru -->
<XML>
	<!-- *********************************************************************** -->
	<ProfileName>%Sourname% %Name%</ProfileName>
	<!-- *********************************************************************** -->
	<Attribs>
		<Sourname>
			<Title>Общая информация</Title>
			<Check>Sourname</Check>
			<Comment>Фамилия</Comment>
			<Example>Алибаба</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
				<onblur>value = FirstCapitalLetter(value); value = DeleteSpace(value);</onblur>
				<Formatters>FirstCapitalLetter,DeleteSpace</Formatters>
			</Attribs>
			<IsDuty>1</IsDuty>
			<Value/>
		</Sourname>
		<!-- ********************************************************************** -->
		<Name>
			<Check>Name</Check>
			<Comment>Имя</Comment>
			<Example>Василий</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
				<onblur>value = FirstCapitalLetter(value); value = DeleteSpace(value);</onblur>
				<Formatters>FirstCapitalLetter,DeleteSpace</Formatters>
			</Attribs>
			<IsDuty>1</IsDuty>
			<Value/>
		</Name>
		<!-- ********************************************************************** -->
		<Lastname>
			<Check>Lastname</Check>
			<Comment>Отчество</Comment>
			<Example>Алибабаевич</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
				<onblur>value = FirstCapitalLetter(value); value = DeleteSpace(value);</onblur>
				<Formatters>FirstCapitalLetter,DeleteSpace</Formatters>
			</Attribs>
			<IsDuty>1</IsDuty>
			<Value/>
		</Lastname>
		<!-- ********************************************************************** -->
		<BornDate>
			<Check>BornDate</Check>
			<Comment>Дата рождения</Comment>
			<Example>18.03.1986</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
				<onblur>value = value.charAt(0).toUpperCase() + value.substring(1).toLowerCase();</onblur>
			</Attribs>
			<IsDuty>0</IsDuty>
			<Value/>
		</BornDate>
		<!-- ********************************************************************** -->
		<Phone>
			<Check>Phone</Check>
			<Comment>Телефон</Comment>
			<Example>+7 495 7558899</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
			</Attribs>
			<IsDuty>0</IsDuty>
			<Value/>
		</Phone>
		<!-- ********************************************************************** -->
		<Email>
			<Check>Email</Check>
			<Comment>Электронный адрес</Comment>
			<Example>alexander@yandex.ru</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
			</Attribs>
			<IsDuty>1</IsDuty>
			<Value>%Email%</Value>
		</Email>
		<!-- ********************************************************************** -->
		<!-- ********************************************************************** -->
		<pCountry>
			<Title>Почтовый адрес</Title>
			<Check>Country</Check>
			<Comment>Страна почтового адреса</Comment>
			<Example>Россия</Example>
			<Type>Select</Type>
			<Options>
				<AU>Австралия</AU>
				<AT>Австрия</AT>
				<AZ>Азербайджан</AZ>
				<AM>Армения</AM>
				<BY>Беларусь</BY>
				<BG>Болгария</BG>
				<GB>Великобритания</GB>
				<HU>Венгрия</HU>
				<DE>Германия</DE>
				<GE>Грузия</GE>
				<IL>Израиль</IL>
				<IT>Италия</IT>
				<KZ>Казахстан</KZ>
				<KG>Киргизия</KG>
				<CA>Канада</CA>
				<CC>Кокосовые острова</CC>
				<LV>Латвия</LV>
				<LT>Литва</LT>
				<MT>Мальта</MT>
				<MD>Молдова</MD>
				<NL>Нидерланды</NL>
				<NO>Норвегия</NO>
				<PL>Польша</PL>
				<RU>Россия</RU>
				<US>США</US>
				<TJ>Таджикистан</TJ>
				<TM>Туркмения</TM>
				<UZ>Узбекистан</UZ>
				<UA>Украина</UA>
				<FI>Финляндия</FI>
				<CZ>Чехия</CZ>
				<EE>Эстония</EE>
				<JP>Япония</JP>
			</Options>
			<Attribs>
				<size>1</size>
				<style>width: 100%;</style>
			</Attribs>
			<IsDuty>1</IsDuty>
			<Value>RU</Value>
		</pCountry>
		<!-- ********************************************************************** -->
		<pState>
			<Check>State</Check>
			<Comment>Область / край почтового адреса</Comment>
			<Example>Московская обл.</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
				<onblur>value = FirstCapitalLetter(value);</onblur>
				<Formatters>FirstCapitalLetter</Formatters>
			</Attribs>
			<IsDuty>0</IsDuty>
			<Value/>
		</pState>
		<!-- ********************************************************************** -->
		<pCity>
			<Check>City</Check>
			<Comment>Населённый пункт почт. адреса</Comment>
			<Example>Москва</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
				<onblur>value = FirstCapitalLetter(value);</onblur>
				<Formatters>FirstCapitalLetter</Formatters>
			</Attribs>
			<IsDuty>0</IsDuty>
			<Value/>
		</pCity>
		<!-- ********************************************************************** -->
		<!-- ********************************************************************** -->
		<pIndex>
			<Check>Index</Check>
			<Comment>Почтовый индекс почтового адреса</Comment>
			<Example>101000</Example>
			<Type>Input</Type>
			<Attribs>
				<type>text</type>
			</Attribs>
			<IsDuty>0</IsDuty>
			<Value/>
		</pIndex>
		<!-- ********************************************************************** -->
		<pType>
			<Check>Type</Check>
			<Comment>Тип почтового адреса</Comment>
			<Example>Улица</Example>
			<Type>Select</Type>
			<Options>
				<Street>улица</Street>
				<Alleyway>переулок</Alleyway>
				<Area>площадь</Area>
				<Thoroughfare>проезд</Thoroughfare>
				<Alley>аллея</Alley>
				<Avenue>проспект</Avenue>
				<Boulevard>бульвар</Boulevard>
				<Wharf>набережная</Wharf>
				<Highway>шоссе</Highway>
				<Pobox>а/я</Pobox>
				<Deadend>тупик</Deadend>
				<Block>квартал</Block>
				<Village>деревня</Village>
				<No>n/a</No>
			</Options>
			<Attribs>
				<size>1</size>
				<style>width: 100%;</style>
			</Attribs>
			<IsDuty>0</IsDuty>
			<Value>Street</Value>
		</pType>
		<!-- ********************************************************************** -->
		<pAddress>
			<Check>Address</Check>
			<Comment>Улица, дом почтового адреса</Comment>
			<Example>Ленина, д. 51, кв. 7</Example>
			<Type>TextArea</Type>
			<Attribs>
				<rows>3</rows>
			</Attribs>
			<IsDuty>0</IsDuty>
			<Value/>
		</pAddress>
		<!-- ********************************************************************** -->
	</Attribs>
	<!-- *********************************************************************** -->
</XML>
