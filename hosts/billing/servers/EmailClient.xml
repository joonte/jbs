<?xml version="1.0" encoding="utf-8"?>
<!-- @author Alex Keda, for www.host-food.ru -->
<XML>
<!-- *********************************************************************** -->
<Name>Приём почты (pop3/imap)</Name>
<!-- *********************************************************************** -->
<IsActive>1</IsActive>
<!-- *********************************************************************** -->
<Defaults>
	<Protocol>tcp</Protocol>
	<Address>pop.yandex.ru</Address>
	<Port>110</Port>
	<Login>admin@company.com</Login>
	<Monitoring>POP3=110 POP3S=995 IMAP4=143 IMAP4S=993</Monitoring>
	<AdminNotice>Используется та же учётная запись, от которой шлёт сообщения биллинг</AdminNotice>
</Defaults>
<!-- *********************************************************************** -->
<!-- *********************************************************************** -->
<Attribs>
	<!-- *********************************************************************** -->
	<Method>
		<Title>Прочие настройки</Title>
		<Check>/^[0-9]{1,4}$/u</Check>
		<Comment>Используемый метод</Comment>
		<Type>Select</Type>
		<Options>
			<pop3>pop3</pop3>
			<imap>imap4</imap>
		</Options>
		<Attribs>
			<size>1</size>
			<prompt>Протокол используемый для подключения к почтовому серверу. Тестировался только pop3, с почтой на Яндексе.</prompt>
			<style>width: 100%;</style>
		</Attribs>
		<IsDuty>1</IsDuty>
		<Value>pop3</Value>
	</Method>
	<!-- *********************************************************************** -->
</Attribs>
<!-- *********************************************************************** -->
</XML>
